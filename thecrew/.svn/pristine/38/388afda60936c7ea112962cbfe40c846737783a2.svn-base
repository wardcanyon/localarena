     */
    
    function stPreparation()
    {
        self::setGameStateValue( 'turn_count', 1 );
        
        // Take back all cards (from any location => null) to deck and shuffle
        $this->cards->moveAllCardsInLocation(null, "deck");
        $this->cards->shuffle('deck');
        
        // Deal cards to each players (and signal the UI to clean-up)
        self::notifyAllPlayers('cleanUp', clienttranslate('new mission'), array());
        
        // Create deck, shuffle it and give initial cards
        $players = self::loadPlayersBasicInfos();
        foreach($players as $player_id => $player) {
            
            $nbCards = intdiv(40, count($players));
            
            if(count($players) == 3 && $player['player_no'] == 1)
            {
                $nbCards++;
            }            
            $hand = $this->cards->pickCards($nbCards, 'deck', $player_id );
            
            // Notify player about his cards
            self::notifyPlayer($player_id, 'newHand', clienttranslate('-- Your cards are:&nbsp;<br />${cards}'), array(
                'cards' => self::listCardsForNotification($hand),
                'hand' => $hand,
            ));
        }
        
        //Locate captain
        $captainId = self::getUniqueValueFromDB( "SELECT card_location_arg FROM card where card_type = 5 and card_type_arg = 4");// NOI18N
        
        self::setGameStateValue( 'captain_id', $captainId);
        // Notify player about captain
        self::notifyAllPlayers('captain', clienttranslate('${player_name} is your new captain'), array(
            'player_name' => $players[$captainId]['player_name'],
            'player_id' => $captainId,
        ));
        
        $this->gamestate->nextState( 'next' );
    }
    
    function stNewTrick() {
        // New trick: active the player who wins the last trick, or the player on right to the dealer
        if ($this->cards->countCardInLocation('cardswon') == 0) { // This is the first trick
            $this->gamestate->changeActivePlayer(self::getGameStateValue('captain_id'));            
        } // Otherwise, the player to play first is the winner of the last trick, see stNextPlayer
        
        // Reset trick color to 0 (= no color)
        self::setGameStateValue('trick_color', 0);
        
        $this->gamestate->nextState();
    }
    
