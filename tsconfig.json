{
    "rootDir": ".",
    "compilerOptions": {
        "target": "es5",
        "module": "none",
        "lib": ["dom", "esnext"],
        "sourceMap": false,
	"experimentalDecorators": true,
        "module": "umd",
        "typeRoots": [
            "src/client/ebg/types",
            "./node_modules/@types"
        ],
        "rootDirs": [
            "./src/client",
            "./vendor/client",
            "src/client",
            "vendor/client"
        ]
    },
    "include": [
        "src/client/ebg/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
