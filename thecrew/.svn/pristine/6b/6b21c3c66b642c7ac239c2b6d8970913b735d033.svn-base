    function argComm()
    {        
        $result = array();
        $player_id = self::getActivePlayerId();   
        
        $hand = $this->cards->getCardsInLocation('hand', $player_id);
        foreach($hand as $card_id => $card) {
            if($card['type']<5)
            {
                if(count($this->getPossibleStatus($card))>0)
                {
                    $result[$card_id] = $card_id;
                }
            }
        }
        
        return $result;
    }
    
