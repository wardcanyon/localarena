{OVERALL_GAME_HEADER}


<div id="up">
    <div id="table">
        <div id="playertables" class="{NBR}">

            <!-- BEGIN player -->
            <div id="playertable_{PLAYER_ID}" class="playertable whiteblock playertable_{DIR}">
                <div class="playertablename" style="color:#{PLAYER_COLOR}">
                    {PLAYER_NAME}
                </div>
                <div class = "playertablecards">
                	<div id="playertablecard_{PLAYER_ID}" class="playertablecard">
                		<div class="cardontable" id="cardontable_1" style="background-position:0px 0px"></div>
                	</div>
                	<div id="comcard_{PLAYER_ID}" class="playertablecard reminder">
                		<div class="cardontable" id="cardontable_2" style="background-position:0px 0px"></div>
                		<div class="radio top" id="radio_top_{PLAYER_ID}"></div>
                		<div class="radio middle" id="radio_middle_{PLAYER_ID}"></div>
                		<div class="radio bottom" id="radio_bottom_{PLAYER_ID}"></div>
                	</div>
                </div>
                <div id="bottom_{PLAYER_ID}" class="playerbottom">
                	<div id="captain_icon_spot_{PLAYER_ID}" class="captain"></div>
                	<div class="taskontable" id="taskontable_2" style="background-position:0px 0px">
                		<div class="task_marker task1" id="check_ok_1"></div>
                		<div class="check_ok" id="check_ok_1"></div>
                	</div>
                	<div class="taskontable" id="taskontable_5" style="background-position:0px 0px">
                		<div class="task_marker taski4" id="check_ok_1"></div>
                		<div class="check_ok notok" id="check_nok_1"></div>
                	</div>
                </div>
            </div>
            <!-- END player -->
        </div>
    </div>

    <div id="right">
        <div id='turn_count_wrap' class='whiteblock'><span>{HAND}</span> <span id='turn_counter'></span><span id='total_turns'></span></div>
    </div>
</div>

<div id="myhand_wrap" class="whiteblock">
    <div id="myhand">
    </div>
</div>

<script type="text/javascript">
    // Javascript HTML templates
    var jstpl_cardontable = '<div class="cardontable" id="cardontable_${player_id}" style="background-position:-${x}px -${y}px"></div>';
</script>

{OVERALL_GAME_FOOTER}
